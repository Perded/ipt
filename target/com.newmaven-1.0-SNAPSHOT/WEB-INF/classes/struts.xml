<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.devMode" value="true" />
    <package name="MyStruts" extends="struts-default" >
        <interceptors>
            <interceptor name="myinterceptor"
                         class="rzd.oao.zrw.rcs2.Controllers.MyInterceptor" />
        </interceptors>
      <action name="loginAction" class="rzd.oao.zrw.rcs2.Controllers.LoginAction">
          <result name="success">/home.jsp</result>
          <result name="input">/login.jsp</result>
      </action>
        <action name="view" class="rzd.oao.zrw.rcs2.Controllers.ListTableAction">
            <result>/viewtable.jsp</result>
        </action>
        <action name="edit" class="rzd.oao.zrw.rcs2.Controllers.EditTableRowAction">
            <result>/edittable.jsp</result>
        </action>
        <action name="save" class="rzd.oao.zrw.rcs2.Controllers.SaveRowTableAction">
            <interceptor-ref name="myinterceptor" />
            <result name="success">/123.jsp</result>
        </action>
    </package>
</struts>